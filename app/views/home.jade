extends layout

block content

  .page-header
    h1= category ? category : 'Accueil'

  each product in products
    .well.product
      .row
        .col-md-4
          img(src= product.photo.url)
        .col-md-8
          h3
            a(href='/products/#{product.id}', target="_blank") #{product.title}
              product.title
          p= product.content
          p= product.price
          p= product.category
          p= product.tags
      .row
        form.contact-form(action='/api/cart/add/#{product._id}', method='post')
          .input-group
            span.input-group-addon
              span quantit√©
            select.form-control.select-control(name='quantity')
              -var quantity = product.quantity
              - for (var i = 1; i < product.quantity + 1; i++) {
                  option(value=i)= i
              - }
          button.js-addToCart.btn.btn-lg.btn-success(type='submit') Ajouter au panier
