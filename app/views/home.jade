extends layout

block content
  .page-header
    h1= category ? category : 'Accueil'

  each product in products
    .well.product
      .row
        .col-md-4
          .thumbnail
            if product.photo
              img(src='#{product.photo}' class='product-img')
            else
              span.glyphicon.glyphicon-picture
        .col-md-8
          h3
            a(href='/products/#{product.id}', target='_blank') #{product.title}
              product.title
          p= product.content
          p Prix:
            span.product-price #{product.price} Crédits Galactiques
          p Catégorie:
            span.product-category
              a(href='/#{product.category}', target='_blank') #{product.category}
          p Tags:
            each tag in product.tags
              span.product-tag= tag
          p= product.price
          p= product.category
          p= product.tags
      .row
        form.contact-form(action='/api/cart/add/#{product._id}', method='post')
          .input-group
            span.input-group-addon
              span quantité
            select.form-control.select-control(name='quantity')
              -var quantity = product.quantity
              - for (var i = 1; i < product.quantity + 1; i++) {
                  option(value=i)= i
              - }
          button.js-addToCart.btn.btn-success(type='submit') Ajouter au panier
