extends layout

block content

  h1 cart Page
  if user
    if cart.length
      .panel(role='tabpanel' id='products' class='panel-default panel-dashboard active')
        .panel-body.dashboard-table
          table.table.table-striped
            thead
              tr
                th Produit
                th Catégorie
                th tags
                th Infos
                th Prix
                th Supprimer
              each product in cart
                tr(data-id='#{product._id}')
                  td= product.title
                  td= product.category
                  td= product.tags
                  td= product.content
                  td= product.price
                  td
                    a.js-removeFromCart(href='api/cart/remove/#{product._id}') ❌
    else
      p Votre panier est vide
