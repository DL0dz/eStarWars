extends layout

block content

  .panel.panel-default.panel-login
    .panel-heading
      h3.panel-title Login
    .panel-body
      form(action='' method='post' class='login-form')
        .input-group
          span#basic-addon1.input-group-addon
            span.glyphicon.glyphicon-envelope
          input(type='email' class="form-control" name='email' placeholder='Email' aria-describedby="basic-addon1")
        .input-group
          span#basic-addon2.input-group-addon
            span.glyphicon.glyphicon-lock
          input(type='password' class="form-control" name='password' placeholder='Password' aria-describedby="basic-addon2")
        button(type='submit' class='btn btn-default') Login
